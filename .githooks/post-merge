#!/usr/bin/env bash
set -e

branch=$(git rev-parse --abbrev-ref HEAD)
if [ "$branch" != "main" ]; then
    exit 0
fi

echo "âœ… main updated, ready to push to all remotes..."

remotes=$(git remote)

for remote in $remotes; do
    echo "ğŸš€ Pushing to : $remote"
    git push "$remote" main || echo "âš ï¸ Faile to push to $remote"
done

echo "ğŸ‰ Push to all remotes successfully"

